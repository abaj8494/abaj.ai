{
  "css.validate": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "grammarly.selectors": [
    {
      "language": "markdown",
      "pattern": "content/**/*.md"
    }
  ]
}
